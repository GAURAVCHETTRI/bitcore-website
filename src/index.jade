extends _layouts/primary

block body
  
  .background-element.grid-fade-in.text-center(style="background: url('/images/shadow-grid.png') no-repeat center; height:500px; width:100%")
  .hero.bg-white
    .container.hero-container
      .row
        .col-sm-12
          img(src="/images/home-logo.png").m-t-lg.m-b.fade-in-down.home-logo
          h4.m-b-md.fade-in-delayed A powerful, modular node for bitcoin and blockchain-based apps.
          .row
            a(href="https://github.com/bitpay/bitcore#bitcore").btn.btn-primary.fade-in-delayed Get Started

  .bg-darker.p-y-md.subscribe-bar
    .container
      .row
        .text-center.hidden-sm-down
          iframe.hidden-xs-down(src="https://ghbtns.com/github-btn.html?user=bitpay&repo=bitcore&type=star&count=true&size=large&count=true" frameborder="0" scrolling="0" width="150px" height="30px")
          iframe.hidden-xs-down(src="https://ghbtns.com/github-btn.html?user=bitpay&repo=bitcore&type=fork&count=true&size=large&count=true" frameborder="0" scrolling="0" width="150px" height="30px")